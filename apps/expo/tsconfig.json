{
  "extends": ["expo/tsconfig.base", "../../tsconfig.base.json"],
  "compilerOptions": {
    "noEmit": true,
    "composite": false,
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": ["./src/*"],
      "assets/*": ["./assets/*"],
      "@env": ["./src/lib/env.js"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "paths": {
    "@src/*": ["./src/*"],
    "assets/*": ["./assets/*"],
    "@env": ["./src/lib/env.js"]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
